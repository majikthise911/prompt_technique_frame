# Streamlit Secrets Configuration Example
# Copy this file to secrets.toml and fill in your actual API keys
# DO NOT commit secrets.toml to version control!

# API Keys for all providers
ANTHROPIC_API_KEY = "your_anthropic_key_here"
OPENAI_API_KEY = "your_openai_key_here"
XAI_API_KEY = "your_xai_api_key_here"

# API Endpoints (optional - defaults are set in code)
ANTHROPIC_BASE_URL = "https://api.anthropic.com/v1"
OPENAI_BASE_URL = "https://api.openai.com/v1"
XAI_BASE_URL = "https://api.x.ai/v1"

# Models (optional - defaults are set in code)
CLAUDE_MODEL = "claude-sonnet-4-5-20250929"
GPT_MODEL = "gpt-4o-mini"
XAI_MODEL = "grok-2-latest"

# Embeddings (for RAG - optional)
EMBEDDING_MODEL = "text-embedding-3-large"

# Database paths (optional - defaults are set in code)
DB_PATH = "./data/scaffolds.db"
PERFORMANCE_DB_PATH = "./data/performance.db"
